package com.diligitis.api.configuration;

import org.springframework.context.annotation.Configuration;
import org.springframework.data.mongodb.config.AbstractMongoConfiguration;
import org.springframework.data.mongodb.repository.config.EnableMongoRepositories;

import com.mongodb.MongoClient;
import com.mongodb.MongoClientURI;
import com.mongodb.client.MongoDatabase;

@Configuration
@EnableMongoRepositories(basePackages = "com.diligitis.api.repository")
public class MongoConfig extends AbstractMongoConfiguration {
  
    @Override
    protected String getDatabaseName() {
        return "diligitis";
    }
  
    @Override
    protected String getMappingBasePackage() {
        return "com.diligitis.api.entity";
    }

	@Override
	public MongoClient mongoClient() {
		return new MongoClient(getUri());
	}
	
	public MongoClientURI getUri() {
		
		String stringConnection = "mongodb://torres:torres@diligitis-shard-00-00-gis5c.gcp.mongodb.net:27017/diligitis?ssl=true&replicaSet=diligitis-shard-0&authSource=admin&retryWrites=true";
		//String stringConnection = "mongodb://diligitis:torres@diligitis-shard-00-00-gis5c.gcp.mongodb.net/admin";
		
		try {
			return new MongoClientURI(stringConnection);
		} catch (Exception e) {
			e.printStackTrace();
			return null;
		}
	}
	
	public MongoDatabase getDatabase() {
		
		return mongoClient().getDatabase(getDatabaseName());
		
	}
}
